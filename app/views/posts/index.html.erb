<%= form_for(@post) do |form| %>
  <%= form.label :content %>
  <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
  <%= display_errors(@post) %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
  <h3>
    Recent posts
  </h3>
  <ul class="posts">
    <%= render partial: 'post', collection: @timeline_posts %>
    <h1>Posts by Friends</h1>
    <%= render partial: 'post', collection: @posts_by_friends %>
  </ul>
</article>
